@model dynamic

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>


<div data-bind="foreach: filters">
    <div>
        <strong data-bind="text: title"></strong>
        <input type="text" data-bind="value: param" />
    </div>
</div>

<table>
    <thead>
        <tr data-bind="template: {name: 'head-template', foreach: headers, as: 'header'}">
        </tr>
    </thead>
    <tbody data-bind="template: { name: 'TableRow', foreach: filteredRows }"></tbody>
</table>

<script type="text/html" id="TableRow">
    <tr>
        <td data-bind="text: UserName"></td>
        <td data-bind="text: CreateDate"></td>
        <td>
            <select data-bind="event: { change: $root.selectChanged }, options: $root.roles, optionsValue: 'Id', value: RoleId, optionsText: 'Name'"></select>
        </td>
        <td>
            <button data-bind="enable: SaveRequired, click: $root.save">Save</button>
            <button>Read blog</button>
        </td>
    </tr>
</script>

<script type="text/html" id="head-template">
    <th data-bind="click: $root.sort">
        <strong data-bind="text: title"></strong>
        @*<text data-bind="text: asc"></text>
            <text data-bind="text: active"></text>
            <img data-bind="css: { display: (asc & active) }" src="../../Content/images/down.gif" />
            <img data-bind="css: { hide: (!asc & active) }" src="../../Content/images/up.gif" />*@
    </th>
</script>

<script type="text/javascript" src="../../Scripts/custom/usersKoGrid.js"></script>