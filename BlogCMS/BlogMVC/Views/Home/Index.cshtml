@model IEnumerable<Post>
@{
    ViewBag.Title = "Recent posts";
}

<link type="text/css" href="~/Content/Custom/RecentPosts.css" rel="stylesheet" />

<h2>Recent posts</h2>

@foreach (var item in Model)
{
    <div class="post">
        <h3>@Html.ActionLink(item.Title, "Details", "Posts", new { id = item.PostId }, null)</h3>
        <div>
            <p>
                @if (@item.Content.Length > 800)
                {
                    @item.Content.Substring(0, 800)
                    @:...
                }
                else
                {
                    @item.Content
                }
            </p>
        </div>
        <div class="post-signature">@item.User.UserName @item.CreateDate.Date.ToShortDateString()</div>
    </div>
}